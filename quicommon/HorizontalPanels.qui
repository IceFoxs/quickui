<Control name="HorizontalPanels">

<content>
    <div id="HorizontalPanels_left" class="minimumWidth" />
    <div id="HorizontalPanels_content"/>
    <div id="HorizontalPanels_right" class="minimumWidth" />
</content>

<style>
{
    display: table;
}

.HorizontalPanels.fill {
    height: 100%;
    position: absolute; /* Suppress normal table size-to-content */
    width: 100%;
}

> * {
    display: table-cell;
    vertical-align: top;
}

.minimumWidth {
    width: 1px;
}

/* Supports nesting of HorizontalPanels or VerticalPanels with fill="true" */
#HorizontalPanels_content > * {
	position: inherit;
}
</style>

<script>
HorizontalPanels.prototype.extend({
    content: Control.element("HorizontalPanels_content").content(),
    fill: Control.element().applyClass("fill"),
    left: Control.element("HorizontalPanels_left").content(),
    right: Control.element("HorizontalPanels_right").content()
});
</script>

</Control>
