<Control name="Recipe">

<content>
    <div>
        Name: <span id="Recipe_name"/>
        <span id="Recipe_rating"/>
    </div>
    <div id="Recipe_content"/>
</content>

<script>
$.extend(Recipe.prototype, {
    content: Control.Element("Recipe_content").content(),
    name: Control.Element("Recipe_name").content(),
    rating: Control.Property.integer(function(rating) {
        $(this.Recipe_rating).text("*****".substr(0, rating));
    })
})
</script>

</Control>
