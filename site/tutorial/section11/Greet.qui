<Control name="Greet">
	
<content>
	Hello, <span id="Greet_content"/><span id="Greet_punctuation">.</span>
</content>

<style>
{
	font-family: Arial, Helvetica, sans serif;
	font-size: 11pt;
}
</style>

<script>
$.extend(Greet.prototype, {
	content: QuickUI.Element("Greet_content").content(),
	punctuation: QuickUI.Element("Greet_punctuation").content()
});
</script>

</Control>