<Control name="Greet">
	
<content>
	Hello, <span id="Greet_content"/><span id="Greet_punctuation">.</span>
</content>

<style>
{
	font-family: Arial, Helvetica, sans serif;
	font-size: 11pt;
}
</style>

<script>
Greet.prototype.extend({
	content: Control.element("Greet_content").content(),
	punctuation: Control.element("Greet_punctuation").content()
});
</script>

</Control>