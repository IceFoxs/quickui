<Control name="LinkList">

<content>
	<List id="list">
		<p>
			<Link id="link"/>
		</p>
	</List>
</content>    

<script>
LinkList.prototype.extend({
	data: Control.element("list").controlProperty("data"),
	initialize: function() {
		this.$list.bind = function(value) {
			$(this).find("#link").control().content(value);
		};
	}
});
</script>

</Control>